<?xml version="1.0" encoding="UTF-8"?>
<game
    id="Maze Game"
    class="com.turpgames.maze.view.MazeGame"
    version="0.0.1" >

    <params>

        <param
            key="provider"
            value="com.turpgames.framework.v0.impl.libgdx.GdxGameProvider" />

        <param
            key="settings-key"
            value="com.turpgames.maze" />

        <param
            key="virtual-width"
            value="550" />

        <param
            key="virtual-height"
            value="800" />

        <param
            key="default-font"
            value="Akachen_chinese,1" />

        <param
            key="default-skin"
            value="ppt" />

        <param
            key="default-screen"
            value="splash" />

        <param
            key="screen-switcher"
            value="sliding,0.30" />

        <param
            key="form-switcher"
            value="sliding,0.30" />

        <param
            key="tutorial-page-switcher"
            value="sliding,0.25" />

        <param
            key="allow-exit-on-back"
            value="true" />

        <param
            key="turp-address"
            value="http://www.turpgames.com" />

        <param
            key="libgdx-address"
            value="http://libgdx.badlogicgames.com" />

        <param
            key="play-store-address"
            value="https://play.google.com/store/apps/details?id=com.turpgames.maze" />

        <param
            key="app-store-address-ios7"
            value="itms-apps://itunes.apple.com/app/id737312134" />

        <param
            key="app-store-address-old"
            value="itms-apps://itunes.apple.com/WebObjects/MZStore.woa/wa/viewContentsUserReviews?type=Purple+Software&amp;id=737312134" />
    </params>

    <screens>

        <screen
            id="splash"
            class="com.turpgames.maze.view.SplashScreen" />
         <screen
            id="levels"
            background-texture="bg"
            class="com.turpgames.maze.view.LevelSelectionScreen" />
        <screen
            id="game"
            class="com.turpgames.maze.view.GameScreen" />
        <screen
            id="result"
            background-texture="bg"
            class="com.turpgames.maze.view.ResultScreen" />
        <screen
            id="menu"
            background-texture="bg"
            class="com.turpgames.maze.view.MenuScreen" />
        <screen
            id="about"
            background-texture="bg"
            class="com.turpgames.maze.view.AboutScreen" />
        
        
        <screen
            id="slider-test"
            class="com.turpgames.maze.view.SliderTestScreen" />
        <screen
            id="maze-test"
            class="com.turpgames.maze.view.MazeTestScreen" />
        <screen
            id="editor-screen"
            class="com.turpgames.maze.view.EditorScreen" />
        
    </screens>
    
    <forms>

        <form id="mainForm" >

            <button
                id="btnPlay"
                action="screen=levels"
                text="Play"
                y="18" />

            <button
                id="btnAbout"
                action="screen=about"
                resource-text="About"
                y="14" />
        </form>
    </forms>
    
    <animations>
        <animation
            id="loading"
            frame-duration="0.040"
            frame-height="74"
            frame-width="74"
            loop="true"
            texture="loading" />
       <animation
            id="fell_on_trap"
            texture="fell_on_trap"
            frame-duration="0.150"
            frame-height="40"
            frame-width="40"
            looping="false" />
        
        <animation
            id="fell_on_objective"
            texture="fell_on_objective"
            frame-duration="0.100"
            frame-height="40"
            frame-width="40"
            looping="false" />
        
        <animation
            id="fell_on_portal"
            texture="fell_on_portal"
            frame-duration="0.150"
            frame-height="40"
            frame-width="40"
            looping="false" />
        
    </animations>
    
    <languages>
        <language
            id="en-US"
            encoding="UTF8"
            flag-texture-id="flag_en_us"
            path="lang/Strings_en_US.properties" />
    </languages>
    
    <resources>
        <fonts>
            <font
                id="Akachen_chinese"
                path="fonts/akachen_chinese.fnt" />
        </fonts>

        <textures>
            <texture
                id="turp_logo"
                path="img/turpgames_logo.png"
                resource-load="primary" />

            <texture
                id="loading"
                path="img/loading.png" />

            <texture
                id="fw_close"
                path="img/framework/close.png" />

            <texture
                id="tb_back"
                path="img/toolbar/back.png" />

            <texture
                id="tb_reset"
                path="img/toolbar/reset.png" />
            
            <texture
                id="tb_sound_off"
                path="img/toolbar/sound-off.png" />

            <texture
                id="tb_sound_on"
                path="img/toolbar/sound-on.png" />
            
            <texture
                id="level_item"
                path="img/level_item.png" />

            <texture
                id="locked"
                path="img/lock_locked.png" />

            <texture
                id="unlocked"
                path="img/lock_unlocked.png" />

            <texture
                id="star_empty"
                path="img/star_empty.png" />

            <texture
                id="star_half"
                path="img/star_half_left.png" />

            <texture
                id="star_full"
                path="img/star_full.png" />

            <texture
                id="button_green"
                path="img/button_green.png" />

            <texture
                id="button_blue"
                path="img/button_blue.png" />

            <texture
                id="info"
                path="img/info.png" />
            
            <texture
                id="fell_on_trap"
                path="img/game/fell_on_trap.png" />
            <texture
                id="fell_on_objective"
                path="img/game/fell_on_objective.png" />
            <texture
                id="fell_on_portal"
                path="img/game/fell_on_portal.png" />
            <texture
                id="lokum"
                path="img/game/lokum.png" />
            
            <texture
                id="trap"
                path="img/game/trap.png" />
            
            <texture
                id="objective"
                path="img/game/door.gif" />
            
            <texture
                id="wall"
                path="img/game/body_full40-2.png" />
            
            
            <texture
                id="rotationSignTemp"
                path="img/game/temp.png" />
            
            <texture
                id="rotationSignLeft"
                path="img/game/left.png" />
            
            <texture
                id="rotationSignRight"
                path="img/game/right.png" />

            <texture
                id="bg"
                path="img/bg.png" />
        </textures>

        <sounds>
        </sounds>
    </resources>

    <skins>

        <skin id="ppt" >

            <form
                cols="16"
                rows="32" />

            <button
                cols="8"
                focus-color="#3974b1ff"
                font-scale="1.2"
                halign="center"
                rows="2"
                vibrate="50"
                x="4" />

            <label
                halign="center"
                rows="2"
                color="#fff" />
        </skin>
    </skins>

</game>